#include <stdio.h>

#include <math.h>

int CI(float p,float t,float r){

	float CI;
  
CI = p * (pow((1 + r / 100), t));

printf("%f",CI);

}

int main()

{float p, t, r;

printf("Enter principle (amount): ");

scanf("%f", &p);

printf("Enter time: ");

scanf("%f", &t);

printf("Enter rate: ");

scanf("%f", &r);

CI(p,t,r);

return 0;

}
