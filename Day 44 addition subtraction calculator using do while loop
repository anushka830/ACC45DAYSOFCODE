#include<stdio.h>

int main()

{

 int ch, n1, n2;

 printf("\n Enter values n1, n2 \n");

scanf("%d %d",&n1,&n2);

 do

 {

  printf("=== Menu ===\n");

  printf("1. Addition\n");

  printf("2. Substraction\n");

  printf("3. Exit\n");

  printf("Enter your choice:");

  scanf("%d",&ch);

  switch (ch)

  {
    case  1: printf("The addition = %d \n", n1 + n2);

           break;

    case  2: printf("The substraction = %d \n", n1 - n2);

           break;

    case  3: printf("Goodbye, visit again !!!!\n");

           break;

    default: printf("Wrong Choice. Enter again\n");

           break;

  }

 } while (ch != 3);

 return 0;

}
